<?xml version="1.0" encoding="utf-8"?>

<mx:HDividedBox
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:eti="com.eti.*"	
	horizontalScrollPolicy="off" 
	verticalScrollPolicy="off" 
	creationComplete="initSpeciesPage()" y="300">				
		
	<mx:Script source="SpeciesPageAs.as"/>	
	<mx:Canvas width="300" height="100%"  >	
		<eti:Navigator id="navigator" x="10" top="5" bottom="20" right="0"/>	
	</mx:Canvas>
	<mx:Canvas width="100%" height="100%" minWidth="600">
	 	<mx:TabBar top="10" dataProvider="speciesView" id="view_edit_tab" visible="false" right="20"/>				
		<mx:Panel layout="absolute" title="{navigator.species_select.selectedItem.title}" 
			id="species_name" right="10" bottom="20" top="30" left="10" horizontalScrollPolicy="off">
			<mx:Panel id="imagepanel" y="9" right="20" height="283" width="243" borderStyle="solid" borderThickness="1" borderColor="#000000" cornerRadius="0" visible="false"/>
			<mx:Image id="species_image" y="10" right="21" height="281" width="241"/>
		
			<mx:HorizontalList id="imagesBar" width="241" height="88" change="parentDocument.showImagesBarImage()" columnWidth="60" right="20" y="300">
			    <mx:itemRenderer>
			    	<mx:Component>
			    		<mx:Image buttonMode="true" height="65" scaleContent="true" verticalAlign="middle" horizontalAlign="center"/>		    			
			    	</mx:Component>
			    </mx:itemRenderer>
		    </mx:HorizontalList>
			<mx:ViewStack id="speciesView" width="100%" height="100%" >	
				<mx:Canvas id="speciesViewContainer" label="View" >
					<mx:TextArea id="view_species_description" htmlText="{navigator.species_select.selectedItem.body}" 
						bottom="50" top="20" left="30" right="300" editable="false" borderStyle="solid"/>		
			
				</mx:Canvas>
				<mx:Canvas id="speciesEditContainer" label="Edit" >	
					<mx:Label left="20" top="10" text="Species name"/>
					<mx:TextInput left="20" top="28" width="200" id="edit_species_name" text="{navigator.species_select.selectedItem.title}"/>
					<mx:RichTextEditor 
						id="edit_species_description" 
						htmlText="{navigator.species_select.selectedItem.body}" 
						title="Species description"
						creationComplete="parentDocument.removeEditorButtons('edit_species_description')" 
						right="280" bottom="40" top="55" left="10"/>
					<mx:Button x="20" width="120" label="Save" click="parentDocument.saveSpecies()" bottom="10"/>
					<mx:Button x="145" y="470" width="120" label="Delete" click="parentDocument.deleteSpecies()" bottom="10"/>
					<mx:Button y="15" label="Add image" width="110" right="25" click="parentDocument.openFileBrowser()" />
					<mx:Button id="buttonDeleteImage" y="15" width="110" right="140" label="Delete image" click="parentDocument.deleteImage()"/>
				</mx:Canvas>
				
			    <mx:Canvas id="speciesNewContainer" label="New" >
			    	<mx:Label left="20" top="10" text="Species name"/>
					<mx:TextInput left="20" top="28" width="200" id="new_species_name" text=""/>
					<mx:RichTextEditor right="280" bottom="40" top="55" left="10"
						id="new_species_description" 
						htmlText="" 
						title="Species description"
						creationComplete="parentDocument.removeEditorButtons('new_species_description')"/>
					<mx:Button x="20" width="120" label="Save" click="parentDocument.saveSpecies()" bottom="10"/>		
					<mx:Button y="15" width="110" right="25" label="Add image" click="parentDocument.openFileBrowser()"/>
					
			    </mx:Canvas>
			</mx:ViewStack>	
		</mx:Panel>
	</mx:Canvas>
</mx:HDividedBox>